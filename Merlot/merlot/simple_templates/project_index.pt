<div xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="merlot">
     
  <div class="view-actions-wrapper">
    <a class="action edit"
      tal:attributes="href python: view.url(context) + '/edit'"
      i18n:translate="">
      <img i18n:name="img" class="icon" alt="edit" tal:attributes="src static/images/edit.png"/>
      Edit
    </a>
    <a class="action delete"
       tal:attributes="href python: view.url(context) + '/confirm-delete'"
       i18n:translate="">
      <img i18n:name="img" class="icon" alt="delete" tal:attributes="src static/images/delete.png"/>
      Delete
    </a>    
  </div>
  
  <div id="project">
    <h1 class="edition" i18n:translate="">
      Project view: <tal:title i18n:name="title" content="context/title"></tal:title>
    </h1>
    <div class="row">
      <div class="right-column">
        <div id="metadata-chart">
          <ul tal:define="start_date context/start_date;
                          end_date context/end_date;
                          status context/status;">
            <li>
              <tal:sd tal:condition="start_date">
                <b i18n:translate="">Start date:</b>
                <tal:block content="start_date"/>
              </tal:sd>
            </li>
            <li>
              <tal:ed tal:condition="end_date">
                <b i18n:translate="">End date:</b>
                <tal:block content="end_date"/>
              </tal:ed>
            </li>
            <li>
              <tal:s tal:condition="status">
                <b i18n:translate="">Status:</b>
                <tal:block content="status"/>
              </tal:s>
            </li>
          </ul>
        </div>
      </div>

      <div class="content-column">
        <p tal:content="context/description"/>
      </div>
    </div>
    <span tal:define="worked_hours viewlet/stats/getWorkedHours;
                      user_worked_hours viewlet/stats/getUserWorkedHours;">
      <tal:wh tal:condition="worked_hours">
        <b i18n:translate="">Total worked hours:</b>
        <tal:block content="python: '%.2f' % worked_hours"/> |
      </tal:wh>
      <tal:uwh tal:condition="user_worked_hours">
        <b i18n:translate="">Hours worked by me:</b>
        <tal:block content="python: '%.2f' % user_worked_hours"/>
      </tal:uwh>
    </span>

    <h2 i18n:translate="">Tasks</h2>
    <div id="context-bar">
      <div class="filter-bar">
        <!--<span class="label">Filter:</span>
          <ul class="filters">
            <li>
              <a>Per status</a>
              <select>
                <option></option>                    
                <option>In Progress</option>
                <option>Completed</option>
                <option>Blocked</option>                        
              </select>
            </li>
          </ul> -->
          <form id="filter-form" action="" i18n:translate="">
            Search: <input i18n:name="search_field" tabindex="0" type="text" size="15" maxlength="15" value="" id="filter-search" name="filter"/>
          </form>
        </div>
        <div class="actions">
            <a class="add-button"
               href=""
               tal:attributes="href python:view.url(context)+'/@@add-task'"
               i18n:translate="">
               Add new Task
            </a>
        </div>
      </div>

      <tal:tasks condition="context/items">
        <div class="results row">
        <table id="listing-table">
          <thead>
            <tr>
              <th i18n:translate="">Fav</th>
              <th i18n:translate="">Status</th>              
              <th class='searchable' i18n:translate="">Title</th>
              <th i18n:translate="">Start date</th>
              <th i18n:translate="">End date</th>
              <th i18n:translate="">Estimate</th>
              <th i18n:translate="">Hours</th>
              <th i18n:translate="">My hours</th>
              <th i18n:translate="">Actions</th>
            </tr>
          </thead>
          <tbody>
            <tal:block repeat="task context">
              <tr>
                <td class="starred">
                  <a href="" 
                     tal:attributes="href string:${task}/toggle-starred?camefrom=${view/url};
                                     class python:'starred-selected' if context[task] in viewlet.starred_tasks else 'starred-not-selected'"></a>
                </td>
                <td class="status">
                    <span tal:attributes="class python:context[task].status.replace(' ', '').lower()" 
                          tal:content="python:context[task].status">In progress</span>
                </td>
                <td><a tal:content="python:context[task].title"
                       tal:attributes="href task"/>
                </td>
                <td class="date start-date" tal:content="python:context[task].start_date" />
                <td class="date end-date" tal:content="python:context[task].end_date" />
                <td tal:condition="python:context[task].estimate" tal:content="python: '%.2f' % context[task].estimate" />
                <td tal:condition="python: not context[task].estimate">-</td>
                <td tal:content="python: '%.2f' % viewlet.tasks_stats[task].getWorkedHours()"/>
                <td tal:content="python: '%.2f' % viewlet.tasks_stats[task].getUserWorkedHours()"/>
                <td class="actions">
                    <a class="log-link linkeable action edit"
                       tal:attributes="href task"
                       i18n:translate="">
                       Log Time
                    </a>                
                    <a href=""
                     tal:attributes="href string:${task}/edit"
                     i18n:translate="">
                    Edit
                    </a> |
                    <a href=""
                     tal:attributes="href string:${task}/confirm-delete"
                     i18n:translate="">
                    Delete
                    </a>
                </td>
              </tr>
            </tal:block>
          </tbody>
        </table>
        </div>
      </tal:tasks>
      <div tal:condition="not: context/items"
           i18n:translate="" class="empty-listing">
        There are currently no tasks.
      </div>
    </div>
</div>
